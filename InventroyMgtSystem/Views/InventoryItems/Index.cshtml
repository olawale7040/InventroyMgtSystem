
@{
    ViewData["Title"] = "Index";
}



<div class="border container backgroundWhite">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">List of Inventory Items</h2>
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="UpSet" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;
                Create New Item
            </a>
        </div>
    </div>
    <br />
    <table id="dataLoad" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="~/js/inventoryItem.js"></script>
}



